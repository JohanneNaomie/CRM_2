<!DOCTYPE html>
<html lang="en">
<head>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>

    <!-- Header -->
    <div>
        @await Html.PartialAsync("_Header")
    </div>

    <!-- NavBar -->
    <div>
        @await Html.PartialAsync("_NavBar")
